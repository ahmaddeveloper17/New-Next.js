generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model List {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  ListName String
}

model Task {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  TaskName String
}
